<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color -->
    <solid android:color="#F0F0F0" /> <!-- Light gray, tweak to match your theme -->

    <!-- Border -->
    <stroke
        android:width="1dp"
        android:color="#CCCCCC" /> <!-- Soft gray border -->

    <!-- Rounded corners -->
    <corners android:radius="8dp" />

    <!-- Padding (optional, usually done in EditText itself) -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>
