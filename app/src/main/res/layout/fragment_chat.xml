<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Input field for new chat name -->
    <EditText
        android:id="@+id/etNewChatName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Chat Name"
        android:textSize="16sp"
        android:padding="8dp" />

    <!-- Button to create new chat -->
    <ImageButton
        android:id="@+id/btnCreateChat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_input_add"
        android:contentDescription="Create Chat"
        android:layout_gravity="center" />

    <!-- RecyclerView for chat messages -->
    <RecyclerView
        android:id="@+id/recyclerMessages"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp"
        android:scrollbars="vertical" />

    <!-- Message input field -->
    <EditText
        android:id="@+id/etMessageInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Type a message"
        android:padding="8dp" />

    <!-- Send message button -->
    <ImageButton
        android:id="@+id/btnSendMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_menu_send"
        android:contentDescription="Send Message"
        android:layout_gravity="end" />

</LinearLayout>
